<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33AFE5" >
    
     <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="73dp"
        android:layout_y="368dp"
        android:background="@drawable/custom_button2"
        android:text="AnswearIt Again"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="74dp"
        android:layout_y="277dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/game"
        android:layout_width="238dp"
        android:layout_height="50dp"
        android:layout_x="20dp"
        android:layout_y="85dp"
        android:text="Game"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#D42412"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/over"
        android:layout_width="133dp"
        android:layout_height="54dp"
        android:layout_x="124dp"
        android:layout_y="146dp"
        android:text="Over"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#D42412"
        android:textSize="50sp" />

</AbsoluteLayout>
